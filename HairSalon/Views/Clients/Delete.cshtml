@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h1>Delete Client</h1>
<p>Are you sure you want to delete this client?</p>

<table class="table">
  <thead>
    <tr>
      <th>
        Client Name
      </th>
      <th>
        Assigned Stylist
      </th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>
        @Html.DisplayFor(model => model.ClientName)
      </td>
      <td>
        @Html.DisplayFor(model => model.Stylist.StylistName)
      </td>
    </tr>
  </tbody>
</table>

@using (Html.BeginForm())
{
    <input type="submit" value="Delete" />
}