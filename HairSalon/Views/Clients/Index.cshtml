@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

@if (@Model.Count == 0)
{
  <h3>No clients have been added yet!</h3>
  <p>@Html.ActionLink("Add a client", "Create")</p>
} 

<h1>Client List</h1>
<p>@Html.ActionLink("Add a client", "Create")</p>

<table class="table">
  <thead>
    <tr>
      <th>
        Client Name
      </th>
      <th>
        Assigned Stylist
      </th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    @foreach (var client in Model) {
      <tr>
        <td>
          @Html.DisplayFor(modelClient => client.ClientName)
        </td>
        <td>
          @Html.ActionLink(client.Stylist.StylistName, "Details", "Stylists", new { id = client.StylistId })
        </td>
        <td>
          @Html.ActionLink("Details", "Details", new { id = client.ClientId }) |
          @Html.ActionLink("Edit", "Edit", new { id = client.ClientId }) |
          @Html.ActionLink("Delete", "Delete", new { id = client.ClientId })
        </td>
      </tr>
    }
  </tbody>
</table>