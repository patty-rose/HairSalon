@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h1>Client Details</h1>

<table class="table">
  <thead>
    <tr>
      <th>
        Client Name
      </th>
      <th>
        Assigned Stylist
      </th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>
        @Html.DisplayFor(model => model.ClientName)
      </td>
      <td>
        @Html.DisplayFor(model => model.Stylist.StylistName)
      </td>
      <td>
        @Html.ActionLink("Edit", "Edit", new { id = Model.ClientId }) |
        @Html.ActionLink("Delete", "Delete", new { id = Model.ClientId })
      </td>
    </tr>
  </tbody>
</table>