@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h1>Add a new Stylist!</h1>
<h3>Fill out this form to add a new stylist. All stylists must have a specialty</h3>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.StylistName)
  @Html.TextBoxFor(model => model.StylistName)

  @Html.LabelFor(model => model.StylistSpecialty)
  @Html.TextBoxFor(model => model.StylistSpecialty)
  <input type="submit" value="Add New Stylist"/>
}
<hr />
<p>@Html.ActionLink("Show all Stylists", "Index")</p>