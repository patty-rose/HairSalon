@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>;

<h1>Stylist List</h1>
<h3>Click on a stylist to see the clients assigned to them</h3>
@if (@Model.Count == 0)
{
  <p>No stylists have been added yet!</p>
  <p>@Html.ActionLink("Add a Stylist!", "Create")</p>
} 
<ul>
  @foreach(Stylist stylist in Model)
  {
    <li>@Html.ActionLink($"{stylist.StylistName}", "Details", new { id = stylist.StylistId }) | @stylist.StylistSpecialty</li>
  }
</ul>

<p>@Html.ActionLink("Add a Stylist!", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>